<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dip"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/home_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dip"
        android:textColor="@android:color/black"
        android:textSize="12dip"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/scenery_img01"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/scenery_img_style" />

        <ImageView
            android:id="@+id/scenery_img02"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/scenery_img01"
            android:background="@drawable/scenery_img_style" />

        <ImageView
            android:id="@+id/scenery_img03"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/scenery_img02"
            android:background="@drawable/scenery_img_style" />
        <ImageView
            android:id="@+id/scenery_img04"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/scenery_img03"
            android:background="@drawable/scenery_img_style" />
    </RelativeLayout>

</LinearLayout>